@model ErgonomicsDatabase.Models.ViewModels.LoginViewModel

@{
    Layout = "_EmptyLayout";
}

@section head {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/login.css" />
    </environment>
}

@section scripts {
    <environment include="Development">
        <script src="~/js/login.js" asp-append-version="true"></script>
    </environment>
}

<main class="container-fluid" role="main">
    <div class="row h-100">
        <div class="col-12 col-md-6 col-lg-5 leftDiv">
            <img src="~/images/saturn-nav.png" alt="Saturn Ergonomics Logo" class="logo mt-4 ml-3" />
            <div class="d-flex justify-content-center align-items-center h-100 w-100">
                <div class="col-12 col-sm-10 col-md-12 col-lg-10">
                    <h1 class="text-center title">Ergonomics Database</h1>
                    <hr />
                    <form class="needs-validation" id="loginForm" novalidate>
                        <p class="text-muted text-center">Welcome back! Please log in to your account.</p>
                        <div class="form-row">
                            <div class="col-12 mb-3">
                                <label for="loginEmail" class="sr-only">Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend" id="loginEmailIcon">
                                        <span class="input-group-text"><i class="fas fa-envelope fa-fw"></i></span>
                                    </div>
                                    <input type="email" class="form-control pl-1 bl-0 rounded-right" id="loginEmail" maxlength="128" placeholder="Email" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid email.
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <label for="loginPassword" class="sr-only">Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend" id="loginPasswordIcon">
                                        <span class="input-group-text"><i class="fas fa-key fa-fw"></i></span>
                                    </div>
                                    <input type="password" class="form-control pl-1 bl-0 rounded-right" id="loginPassword" placeholder="Password" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid password.
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-green btn-block" type="submit">Login</button>
                        <p class="mt-3 text-center text-muted">
                            Don't have an account?
                            <a href="#" class="text-muted register">Register here</a>
                        </p>
                    </form>

                    <form asp-controller="Login" asp-action="Register" method="post" class="needs-validation" id="registerForm" novalidate>
                        <p class="text-muted text-center">Hello! Please request an account to get started.</p>
                        <div class="form-row">
                            <div class="col-12 mb-3">
                                <label asp-for="name" class="sr-only">Name</label>
                                <div class="input-group">
                                    <div class="input-group-prepend" id="nameIcon">
                                        <span class="input-group-text"><i class="fas fa-user fa-fw"></i></span>
                                    </div>
                                    <input asp-for="name" type="text" class="form-control pl-1 bl-0 rounded-right" maxlength="128" placeholder="Name" required>
                                    <div class="invalid-feedback">
                                        Your name is required.
                                    </div>
                                    @Html.ValidationMessage("name")
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="registerEmail" class="sr-only">Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend" id="registerEmailIcon">
                                        <span class="input-group-text"><i class="fas fa-envelope fa-fw"></i></span>
                                    </div>
                                    <input asp-for="registerEmail" type="email" class="form-control pl-1 bl-0 rounded-right" maxlength="128" placeholder="Email" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid email address.
                                    </div>
                                    @Html.ValidationMessage("registerEmail")
                                </div>
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="registerPassword" class="sr-only">Password</label>
                                <div class="input-group">
                                    <div class="input-group-prepend" id="registerPasswordIcon">
                                        <span class="input-group-text"><i class="fas fa-key fa-fw"></i></span>
                                    </div>
                                    <input asp-for="registerPassword" type="password" class="form-control pl-1 bl-0 rounded-right" placeholder="Password" pattern="^(?=.*[0-9]+.*)(?=.*[a-zA-Z]+.*)[0-9a-zA-Z]{8,}$" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid password.
                                        Passwords must be at least 8 characters long and contain at least one letter
                                        and one number.
                                    </div>
                                    @Html.ValidationMessage("registerPassword")
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-green btn-block" type="submit">Register</button>
                        <p class="mt-3 text-center text-muted">
                            Already have an account?
                            <a href="#" class="text-muted login">Login here</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
        <div class="d-none d-md-block col-md-6 col-lg-7 rightDiv">

        </div>
    </div>
</main>